<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SettlementMapper">
	
	<!--表名 -->
	<sql id="tableName">
		OA_SETTLEMENT
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.PROJECT_ID,	
		f.PROJECT_NAME,	
		f.PROJECT_MAN,	
		f.BID_PRICE,	
		f.PROJECT_MONEY,	
		f.DATE,
		f.SYS_ID,
		f.SETTLEMENT_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		PROJECT_ID,	
		PROJECT_NAME,	
		PROJECT_MAN,	
		BID_PRICE,	
		PROJECT_MONEY,	
		DATE,	
		SYS_ID,
		SETTLEMENT_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PROJECT_ID},	
		#{PROJECT_NAME},	
		#{PROJECT_MAN},	
		#{BID_PRICE},	
		#{PROJECT_MONEY},	
		#{DATE},	
		#{SYS_ID},
		#{SETTLEMENT_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SETTLEMENT_ID = #{SETTLEMENT_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PROJECT_ID = #{PROJECT_ID},
			PROJECT_NAME = #{PROJECT_NAME},
			PROJECT_MAN = #{PROJECT_MAN},
			BID_PRICE = #{BID_PRICE},
			PROJECT_MONEY = #{PROJECT_MONEY},
			DATE = #{DATE},
		SYS_ID = #{SYS_ID},
			SETTLEMENT_ID = SETTLEMENT_ID
		where 
			SETTLEMENT_ID = #{SETTLEMENT_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.SETTLEMENT_ID = #{SETTLEMENT_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				PROJECT_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				PROJECT_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				<!--	根据需求自己加检索条件

					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SETTLEMENT_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>

	<select id="endById" parameterType="pd" resultType="pd">
		select
			  *
		from
			act_hi_procinst
			where
			PROC_INST_ID_ =#{ACT_ID}
	</select>
	
	<!-- fh313596790qq(青苔) -->
</mapper>