<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HospitalMapper">
	
	<!--表名 -->
	<sql id="tableName">
		OA_HOSPITAL
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.SYS_ID,	
		f.ARER,	
		f.HOSPITAL_NAME,	
		f.LINKMAN,	
		f.PHONE,	
		f.ACCESSORY,	
		f.BZ,	
		f.STATUS,
		f.ACT_ID,
		f.ISZILIAOQQ,
		f.HOSPITAL_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		SYS_ID,	
		ARER,	
		HOSPITAL_NAME,	
		LINKMAN,	
		PHONE,	
		ACCESSORY,	
		BZ,	
		STATUS,
		ACT_ID,
		ISZILIAOQQ,
		HOSPITAL_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{SYS_ID},	
		#{ARER},	
		#{HOSPITAL_NAME},	
		#{LINKMAN},	
		#{PHONE},	
		#{ACCESSORY},	
		#{BZ},	
		#{STATUS},
		#{ACT_ID},
		#{ISZILIAOQQ},
		#{HOSPITAL_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			HOSPITAL_ID = #{HOSPITAL_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			SYS_ID = #{SYS_ID},
			ARER = #{ARER},
			HOSPITAL_NAME = #{HOSPITAL_NAME},
			LINKMAN = #{LINKMAN},
			PHONE = #{PHONE},
			ACCESSORY = #{ACCESSORY},
			BZ = #{BZ},
		STATUS = #{STATUS},
		ACT_ID = #{ACT_ID},
		ISZILIAOQQ = #{ISZILIAOQQ},
			HOSPITAL_ID = HOSPITAL_ID
		where 
			HOSPITAL_ID = #{HOSPITAL_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.HOSPITAL_ID = #{HOSPITAL_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
			SYS_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
			HOSPITAL_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
			LINKMAN LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				-->
				)
		</if>

		<if test="pd.STATUS!= null and pd.STATUS != ''"><!-- 关键词检索 -->
			and
			(
			STATUS =#{pd.STATUS}
			)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			HOSPITAL_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>